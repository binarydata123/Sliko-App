<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:alpha=".9"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/background"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="26dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/slicko_simple_image"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/registerToSilko"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="17dp"
                            android:background="@drawable/user" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etUserName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Enter username"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_call_answer" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Enter Phone"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:background="@drawable/email" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Enter Email"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_favourite" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etFavouriteTeam"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Enter Favourite team"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_play_position" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <Spinner
                            android:background="@android:color/transparent"
                            android:layout_width="match_parent"
                            android:id="@+id/playPositionSpinner"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_height" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Your Height"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_weight" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Your weight"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_footedness" />

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />


                    <RadioGroup
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:id="@+id/rightFoot"
                            android:checked="true"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:text="Right Foot"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/leftFoot"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:text="Left Foot"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="18dp"
                            android:background="@drawable/password" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="18dp"
                            android:background="@drawable/password" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />


                        <EditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Confirm Password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_bg"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/black_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose your role" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioGroup

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/checkUser"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="User" />

                                    <TextView
                                        android:layout_width="15dp"
                                        android:layout_height="match_parent" />

                                    <RadioButton
                                        android:id="@+id/checkOwner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Stadium Owner" />

                                </RadioGroup>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <FrameLayout
                        android:id="@+id/loginButtonContainer"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="35dp"
                        android:descendantFocusability="blocksDescendants">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/registerButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/button_bg"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="@string/register"
                            android:textColor="@color/white" />


                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/haveAccountClick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="@string/haveAccountLoginHere"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/white" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </ScrollView>
</LinearLayout>
