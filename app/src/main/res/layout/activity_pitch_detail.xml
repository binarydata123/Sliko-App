<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/stadiumLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout

            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_collapseMode="parallax">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/stadiumImagesViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#11000000" />
                    </FrameLayout>

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/circleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        app:ci_drawable="@drawable/circle_selected"
                        app:ci_drawable_unselected="@drawable/circle_un_selected"
                        app:ci_orientation="horizontal">

                    </me.relex.circleindicator.CircleIndicator>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/backButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/white_cricle"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_arrow" />
                    </LinearLayout>
                </FrameLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg_green"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingLeft="16dp"
                        android:paddingTop="3dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="3dp"
                        android:text="@string/stadiumInfo"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <hyogeun.github.com.colorratingbarlib.ColorRatingBar
                            android:id="@+id/pitchAverageRating"
                            style="?android:ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="3"
                            app:changeable="false"
                            app:empty_color="@color/emptyColor"
                            app:half_color="@color/lightGreen"
                            app:progress_color="@color/lightGreen" />

                        <TextView
                            android:id="@+id/SD_stadiumReviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reviews"
                            android:textSize="12sp" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/pitchName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Lords Stadium St Johns wood London"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/pitchPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price" />

                        <TextView
                            android:id="@+id/pitchAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Address"
                            />

                        <TextView
                            android:textSize="16sp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/totalBookings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Bookings"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/upcomingBookings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming Bookings" />

                        <TextView
                            android:id="@+id/completeBookings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete Bookings"
                            />
                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:alpha=".2"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/availabilityLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_bg_green"
                    android:paddingLeft="16dp"
                    android:paddingTop="3dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="3dp"
                    android:text="@string/availability"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sun_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/green_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/sunStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/sunEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mon_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/red_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/monStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/monEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tue_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/green_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tueStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tueEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wed_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/green_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/wedStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/wedEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/thurs_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/red_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/thursStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/thursEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fri_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/green_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/friStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/friEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sat_avail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/green_circle" />

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/satStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                        <TextView
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/satEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 am"></TextView>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:alpha=".2"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/reviewsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_bg_green"
                    android:paddingLeft="16dp"
                    android:paddingTop="3dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="3dp"
                    android:text="@string/reviews"
                    android:textColor="@color/white" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pitchesReviewsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false" />

                    <ProgressBar
                        android:id="@+id/progressBarLoading"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp" />
                </FrameLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>