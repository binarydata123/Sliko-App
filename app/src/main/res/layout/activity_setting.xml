<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <include layout="@layout/toolbar_transparent" />


            <ScrollView
                android:fillViewport="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:text="Notifications"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:text="Enable Notification"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:layout_height="wrap_content">
                            <Switch
                                android:id="@+id/enableDisableNotificationButton"
                                android:layout_gravity="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:text="Set Notify time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <FrameLayout
                        android:layout_marginTop="8dp"
                        android:id="@+id/etTimeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="46dp">
                        <EditText
                            android:id="@+id/etTime"
                            android:hint="Enter time"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:background="@drawable/edit_bg_grey"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:text="In min"
                            android:textColor="@color/black"
                            android:layout_gravity="end|center_vertical"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/saveButton"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_bg_green"
                        android:textColor="@color/white"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Save"/>


                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:text="Account"
                            android:layout_height="wrap_content"/>

                        <FrameLayout
                            android:layout_marginTop="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/changePasswordLayout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:text="Change Password"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="end|center_vertical"
                                android:background="@drawable/ic_right_arrow_green"
                                android:layout_height="20dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/deleteAccountLayout"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:text="Delete Account"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="end|center_vertical"
                                android:background="@drawable/ic_right_arrow_green"
                                android:layout_height="20dp"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>