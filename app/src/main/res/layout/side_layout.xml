<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <include layout="@layout/image_layout"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical|top"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha=".2"
                    android:visibility="gone"
                    android:background="@color/black_color" />

                <LinearLayout
                    android:id="@+id/onPostLoginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:background="@drawable/ic_user_green"
                            android:layout_width="18dp"
                            android:layout_height="18dp"

                            />

                        <app.sliko.UI.SsRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:textSize="16sp"
                            android:text="@string/profile"
                            android:textColor="@color/black" />

                    </LinearLayout>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".2"

                        android:background="@color/black_color"
                        android:visibility="gone" />



                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".2"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:id="@+id/editProfileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:background="@drawable/ic_edit_green"
                            android:layout_width="18dp"
                            android:layout_height="18dp"

                            />

                        <app.sliko.UI.SsRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"

                            android:paddingLeft="8dp"
                            android:textSize="16sp"
                            android:text="@string/editProfile"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha=".2"
                        android:background="@color/black_color" />


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/etUserBookingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:background="@drawable/ic_booking_green"
                            android:layout_width="18dp"
                            android:layout_height="18dp"

                            />

                        <app.sliko.UI.SsRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:paddingLeft="8dp"
                            android:text="@string/myBookings"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <ImageView
            android:layout_margin="16dp"
            android:alpha=".2"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@drawable/slicko_simple_image"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>